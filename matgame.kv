
<Menu>:
    GridLayout:
        cols: 1
        Label:
            id: player_level
            text: "level: {}".format(app.player_level)
        GridLayout:
            rows: 1
            Label:
                text: "Matter"
            Label:
                text: "level"
        GridLayout:
            rows: 1
            Button:
                text: "Add"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = "add_menu"
                    app.new_problem()
            Label:
                text: str(app.add_level)

<AddMenu>:
    button_1: button_1
    button_2: button_2
    button_3: button_3
    GridLayout:
        cols: 1
        GridLayout:
            rows: 1
            Label:
                text: "level: {}".format(app.add_level)
            Label:
                text: "xp: {}".format(app.add_xp)
        Label:
            id: problem_label
            text: str(app.problem_label)
        GridLayout:
            rows: 1
            Button:
                id: button_1
                text: str(app.option_1)
                on_press:
                    app.check_option(self)
            Button:
                id: button_2
                text: str(app.option_2)
                on_press:
                    app.check_option(self)
            Button:
                id: button_3
                text: str(app.option_3)
                on_press:
                    app.check_option(self)
        Label
        GridLayout:
            rows: 1
            Button:
                text: "Back"
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = "menu"
            Label
            Button:
                text: "next"
                on_press:
                    root.button_1.background_color = 1,1,1,1
                    root.button_2.background_color = 1,1,1,1
                    root.button_3.background_color = 1,1,1,1
                    app.new_problem()


<Game>:
    id: screen_manager
    menu: menu
    add_menu: add_menu
    # current: "add_menu"
    Menu:
        id: menu
        name: "menu"
        manager: screen_manager
    AddMenu:
        id: add_menu
        name: "add_menu"
        manager: screen_manager
