
<Menu>:
    GridLayout:
        cols: 1
        Label:
            id: player_level
            text: "level: {}".format(app.player_level)
        GridLayout:
            rows: 1
            Label:
                text: "Matter"
            Label:
                text: "level"
        GridLayout:
            rows: 1
            Button:
                text: "Addition"
                on_press:
                    app.current_matter_name = "addition"
                    root.manager.transition.direction = 'left'
                    root.manager.current = "matter_menu"
            Label:
                text: str(app.addition.naturals.level + app.addition.integers.level)
        GridLayout:
            rows: 1
            Button:
                text: "Subtraction"
                on_press:
                    app.current_matter_name = "subtraction"
                    root.manager.transition.direction = 'left'
                    root.manager.current = "matter_menu"
            Label:
                text: str(app.subtraction.naturals.level + app.subtraction.integers.level)

<MatterMenu>:
    GridLayout:
        cols: 1
        GridLayout:
            rows: 1
            Label:
                text: "%s Menu" % app.current_matter_name
            Label:
                text: "Gold: %s" % app.player_gold
        GridLayout:
            rows: 1
            Label:
            Label:
                text: "Level"
            Label:
                text: "XP"
            Label:
                text: "Cost"
        GridLayout:
            rows: 1
            Button:
                text: "natural"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = "game_menu"
                    app.current_submatter_name = "naturals"
                    app.new_problem()
            Label:
                text: "level: {}".format(app.labels_submatters_level[0])
            Label:
                text: "xp: {}".format(int(app.labels_submatters_xp[0]))
            Label:
                text: "gold: %s" % app.labels_submatters_cost[0]
        GridLayout:
            rows: 1
            Button:
                text: "Integer\n(naturals + negatives)"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = "game_menu"
                    app.current_submatter_name = "integers"
                    app.new_problem()
            Label:
                text: "level: {}".format(app.labels_submatters_level[1])
            Label:
                text: "xp: {}".format(int(app.labels_submatters_xp[1]))
            Label:
                text: "gold: %s" % app.labels_submatters_cost[1]

        Label:
        GridLayout:
            rows: 1
            Button:
                text: "Back"
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = "menu"

<MatterHeader@GridLayout>:
    rows: 1
    Label:
        text: "%s %s" % (app.current_matter_name, app.current_submatter_name)

<LevelAndXPHeader@GridLayout>:
    rows: 1
    Label:
        text: "level: {}".format(app.current_submatter_level)
    Label:
        text: "xp: {}".format(int(app.current_submatter_xp))
    Label:
        text: "gold: {}".format(int(app.player_gold))

<ProblemLabel@Label>:
    id: problem_label
    text: str(app.problem_label)

<MsgLabel@Label>:
    text: str(app.current_xp_to_add_label)
    color: app.msg_color

<GameMenu>:
    button_1: button_1
    button_2: button_2
    button_3: button_3
    GridLayout:
        cols: 1
        MatterHeader
        LevelAndXPHeader
        ProblemLabel
        GridLayout:
            rows: 1
            Button:
                id: button_1
                text: str(app.option_1)
                on_press:
                    app.check_option(self)
            Button:
                id: button_2
                text: str(app.option_2)
                on_press:
                    app.check_option(self)
            Button:
                id: button_3
                text: str(app.option_3)
                on_press:
                    app.check_option(self)
        MsgLabel
        GridLayout:
            rows: 1
            Button:
                text: "Back"
                on_press:
                    app.update_labels()
                    root.button_1.background_color = 1,1,1,1
                    root.button_2.background_color = 1,1,1,1
                    root.button_3.background_color = 1,1,1,1
                    root.manager.transition.direction = 'right'
                    root.manager.current = "matter_menu"
            Label
            Button:
                text: "next"
                on_press:
                    root.button_1.background_color = 1,1,1,1
                    root.button_2.background_color = 1,1,1,1
                    root.button_3.background_color = 1,1,1,1
                    app.new_problem()


<Game>:
    id: screen_manager
    menu: menu
    matter_menu: matter_menu
    game_menu: game_menu
    Menu:
        id: menu
        name: "menu"
        manager: screen_manager
    MatterMenu:
        id: matter_menu
        name: "matter_menu"
        manager: screen_manager
    GameMenu:
        id: game_menu
        name: "game_menu"
        manager: screen_manager
